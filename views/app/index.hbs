<div class="row">
  <div class="col s12 m12">
    <div class="card blue darken-1">
      <div class="card-content white-text">
        <span class="card-title center-align">Stack, Drizzle, Eat</span>
        <p class="center-align">Each month, over 50 million pancake lovers come to Stacks Overflowed to talk about
          pancakes, share their
          knowledge, and hate on waffles.
          Join the worldâ€™s largest pancake loving community.</p>
      </div>
      <div class="card-action">
        <a class="center-align" href="#">Post A New Question</a>
      </div>
    </div>
  </div>
</div>

{{#if questions}}
<ul class="tweets">
  {{#each questions}}
  <div class="card">
    <div class="card-content">
      <a class="card-title" href="/question/{{id}}">
        {{ title }}
      </a>
    </div>
    <div class="card-action">
      <a href="/user/{{ author.id }}" class="">{{ author.email }}</a>
      <span class="tweet__date">{{ createdAt }}</span>
      <span class="tweet_comments">{{ comments.length }} Comments</span>
    </div>
  </div>
  {{/each}}
</ul>
{{/if}}